<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 灰色背景的主题 -->
    <style name="CommonGrayTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/g5</item>
    </style>

    <!-- 通用的弹框样式 -->
    <style name="CommonDialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
        <item name="android:windowMinWidthMinor">85%</item>
        <item name="android:windowMinWidthMajor">85%</item>
        <item name="android:windowBackground">@drawable/rectangle_white_8dp_bg</item>
    </style>

    <!-- 加载弹框样式 -->
    <style name="ProgressDialogStyle">
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
        <item name="android:windowBackground">@drawable/rectangle_white_8dp_bg</item>
    </style>

    <!-- 通用的分割线样式 -->
    <style name="CommonLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/g4</item>
    </style>
    <style name="CommonLine_24_0">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:background">@color/w4</item>
    </style>
    <style name="CommonLine_24_24">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:background">@color/w4</item>
    </style>

    <!-- 通用的大按钮样式 -->
    <style name="CommonBigButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:enabled">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/fs_36</item>
        <item name="android:background">@drawable/common_big_button_bg</item>
    </style>

    <!-- 通用的不可点击的按钮样式 -->
    <style name="CommonNoneClickableBigButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:enabled">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/fs_36</item>
        <item name="android:background">@drawable/rectangle_x1_12dp_bg</item>
    </style>

    <style name="CommonButton">
        <item name="android:layout_width">96dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:textSize">@dimen/fs_32</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/common_button_bg</item>
    </style>
</resources>